{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Node",
        "target": "ES2020",
        "rootDir": "./src",
        "outDir": "./build",
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}